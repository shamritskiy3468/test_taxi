<div class="of_main_wrapper">
	<div class="of_inner_banner_wrapper">
		<div class="container-fluid">
			<div class="row">
				<div class="col-md-6 col-sm-6 col-xs-12">
					<div class="row">
						<div class="banner_detail">
							<h1>Связаться с нами</h1>
						</div>
					</div>
				</div>
				<div class="col-md-6 col-sm-6 col-xs-6 hidden-xs">
					<div class="row">
						<div class="banner_img">
							<img src="<%= image_url('cont.jpg')%>" alt="smth" class="img-responsive">
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="of_contact_detail_wrapper">
		<div class="container">
			<div class="row">
				<div class="col-md-4 col-sm-12">
					<div class="comtact_section text-center">
						<div class="contact_icon">
							<span class="flaticon-placeholder"></span>
						</div>
						<div class="contact_detail">
							<h3 style="color: black;">Наш адрес</h3>
							<p>Якуба Колоса 28, 1214</p>
						</div>
					</div>
				</div>
				<div class="col-md-4 col-sm-12">
					<div class="comtact_section text-center">
						<div class="contact_icon">
							<span class="flaticon-mail"></span>
						</div>
						<div class="contact_detail">
							<h3 style="color: black;">e-mail</h3>
							<p>shamritskiy3468@gmail.com</p>
							<p>dmitriy993468@gmail.com</p>
						</div>
					</div>
				</div>
				<div class="col-md-4 col-sm-12">
					<div class="comtact_section text-center">
						<div class="contact_icon">
							<span class="flaticon-phone-call"></span>
						</div>
						<div class="contact_detail">
							<h3 style="color: black;">Телефон</h3>
							<p>+375293211731</p>
							<p>+375295879647</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="of_contact_form_wrapper">
		<div class="container">
			<div class="row">
				<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
					<div class="ch_heading_wrapper">
						<h1 style="color: black;">Оставайтесь на связи</h1>
					</div>
				</div>
				<div class="col-lg-10 col-md-10 col-m-12 col-xs-12 col-lg-offset-1 col-md-offset-1 col-sm-offset-0 col-xs-offset-0">
					<div class="contact_form">
						<div class="row">
							<div class="col-md-6 col-sm-12">
								<div class="form-group">
									<input style="background-color: #edfdff;" type="text" name="name" placeholder="<%= current_user.name %>" class="form-control" id="name" value="<%= current_user.name %>">
								</div>		
								<div class="form-group">
									<input style="background-color: #edfdff;" type="text" name="email" placeholder="<%= current_user.email %>" class="form-control" id="email" value="<%= current_user.email %>">
								</div>						
							</div>
							<div class="col-md-6 col-sm-12">
								<div class="form-group">
									<input type="text" name="phone" placeholder="Телефон" class="form-control" id="phone">
								</div>		
								<div class="form-group">
									<input type="text" name="subject" placeholder="Тема" class="form-control" id="subject">
								</div>						
							</div>
							<div class="col-md-12 col-sm-12">
								<div class="form-group">
									<textarea id="message" placeholder="Сообщение" class="form-control"></textarea>
								</div>		
								<div class="of_btn_wrapper text-center">
									<a class="of_btn">отправить</a>
								</div>		
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>