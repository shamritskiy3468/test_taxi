<h2 style="color: black;">Forgot your password?</h2>
<div class="container">
	<div class="row">
		<div class="col-xs-8">
			<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			  <%= render "devise/shared/error_messages", resource: resource %>
			  <div class="form-group">
			    <%= f.label :email %><br />
			    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
			  </div>
			  <br>
			  <div class="actions">
			    <%= f.submit "Send me reset password instructions", class: 'btn btn-success btn-lg btn-block' %>
			  </div>
			<% end %>
			<%= render "devise/shared/links" %>	
		</div>
		<div class="col-xs-4">
			<img src="<% image_url('main_logo.png') %>">
			<div style="background-image: url('main_logo.png'); width: 300px; height: 300px;" class="forgot_pass">
			</div>
		</div>
		<br>
	</div>
</div>

